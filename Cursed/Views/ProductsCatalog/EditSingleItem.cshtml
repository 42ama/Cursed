@model ProductCatalog
@{
    ViewData["Title"] = "EditSingleItem";
    string saveRoute = (string)ViewData["SaveRoute"];
}

<h1>Product Catalog</h1>
@if (Model != null)
{
    <h2>Edit product @Model.Name from catalog</h2>
}
else
{
    <h2>Add new product to catalog</h2>
}

<form asp-antiforgery="true" method="post" role="form">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <input hidden asp-for="Id" type="number" name="Id" value="@Model?.Id">
    </div>
    <div class="form-group">
        <label for="Name">Name:*</label>
        <div>
            <input required asp-for="Name" type="text" name="Name" value="@Model?.Name">
        </div>
    </div>
    <div class="form-group">
        <label for="Cas">CAS*:</label>
        <div>
            <input required asp-for="Cas" type="number" name="Cas" value="@Model?.Cas">
        </div>
    </div>
    <p>License required:</p> @Html.EditorFor(model => model.LicenseRequired)
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input asp-route=@saveRoute type="submit" class="btn btn-default" value="Save" />
        </div>
    </div>
</form>
<p>Fields labeld with * are required</p>