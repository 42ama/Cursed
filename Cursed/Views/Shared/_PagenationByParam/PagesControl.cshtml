@using Cursed.Models.DataModel.Pagenation
@model PagenationAbstract
@{
    string key = (string)ViewData["PagenationKey"];
}

<table align="right">
    <tr>
        <td>Page:</td>
    </tr>
    <tr>
        <td></td>
        @for (int i = 1; i <= Model.Total; i++)
        {
            if (i == Model.CurrentPage)
            {
                <td>@i</td>
            }
            else
            {
                <td>@Html.RouteLink($"{i}", ViewData["PagenationRouteLink"] as string, new { key = key, currentPage = i, itemsOnPage = Model.ItemsOnPage })</td>
            }
        }
    </tr>
</table>